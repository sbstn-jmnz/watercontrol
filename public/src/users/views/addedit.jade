.container.users-container
  h3 Agregar usuario
  hr
  form.form(name="addeditform",ng-submit="addeditusers.addedit(addeditusers.user)")
    
    .form-group
      label Nombre:
      input.form-control(type="text", name="name", ng-model="addeditusers.user.name", ng-minlength="4", required)
    div(ng-messages="addeditform.name.$error", ng-if="addeditform.name.$touched", role="alert")
      div.form-validation(ng-message="required")
        small.text-warning #[b Campo requerido] 
      div.form-validation(ng-message="minlength")
        small.text-warning #[b Nombre demasiado corto]

    .form-group
      label Rut:
      input.form-control(type="text", name="rut", ng-model="addeditusers.user.rut", required, ng-model-options="{ updateOn: 'blur' }", gp-rut-validator)

    div(ng-messages="addeditform.rut.$error", ng-if="addeditform.rut.$touched", role="alert")
      div.form-validation(ng-message="required") 
        small.text-warning #[b Campo requerido]
      div.form-validation(ng-message="rutInvalid")
        small.text-warning #[b Rut inv√°lido]
          

