            td(ng-bind="")
            td(ng-bind="")
            td(ng-bind="")
            td(ng-bind="")
            td(ng-bind="")
            td.users-options
              .btn-group(role="toolbar").btn-group-xs
                a.btn.btn-primary(ui-sref="measures.addedit/{{user.user_id}}") 
                  i.glyphicon.glyphicon-pencil
                a.btn.btn-info(ui-sref="measures.editpassword/{{user.user_id}}")
                  i.glyphicon.glyphicon-cog
                a.btn.btn-primary(ui-sref="measures.deleteuser/{{user.user_id}}")
                  i.glyphicon.glyphicon-remove

        tfoot
          tr
            td(colspan=9)
              nav
                ul.pagination.pagination-sm
                  li
                    a(href="#", aria-label="Previous")
