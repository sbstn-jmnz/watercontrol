.row
  div(ncy-breadcrumb)
  .condos-container.col-sm-4.col-lg-4

    .panel.panel-success
      .panel-heading
        | Proceso de medición Actual
      .panel-body
        .col-xs-12
          button.btn.btn-default( ng-if="measureProcesses.closed"
                  ng-click="measureProcesses.initProcess()") Iniciar Proceso

          button.btn.btn-default( ng-if="!measureProcesses.closed"
                  ng-click="measureProcesses.closeProcess()") Cerrar Proceso
        
        .parameters-container.col-xs-12
          h4 Parámetros Actuales
          br
          .row
            .col-xs-7
              label Cargo Fijo:
             .col-xs-5
              label(ng-bind="measureProcesses.chargeparameters.fixed")
          .row
            .col-xs-7
              label Valor m3:
             .col-xs-5
              label {{measureProcesses.chargeparameters.normal_price}}
          .row
            .col-xs-7
              label Sobreconsumo:
             .col-xs-5
              label {{measureProcesses.chargeparameters.over_consumption_price}}
          .row
            .col-xs-7
              label Iniciado:
            .col-xs-5
              label ---
          .row
            .col-xs-7
              label Cerrado:
            .col-xs-5
              label ---
          a(ui-sref="measures.changechargeparameters").btn.btn-xs.btn-primary
            i.fa.fa-cogs
            |   Cambiar Parámetros

  .plots-list.col-sm-8.col-lg-6
    table.table.table-hover.table-striped
        thead
          tr
            th.col-xs-3 Cargo Fijo
            th.col-xs-2 Valor m3
            th.col-xs-3 Sobreconsumo
            th.col-xs-4 Estado

        tbody
          tr(ng-repeat="process in measureProcesses.measureProcesses track by process.id")
            td(ng-bind="process.fixed")
            td(ng-bind="process.normal_price")
            td(ng-bind="process.over_consumption_price")
            td(ng-bind="process.status")

            
//Esto debe ir en la pantalla asignada para crear nuevos parametros
//.container
  .panel.panel-success
    .panel-heading
      | Mediciones
    .panel-body
      form
        .form-group
          label Establecer el cargo fijo
          input.form-control(type="password")
        .row
          .col-xs-4
            label Periodo de cobro
          .col-xs-4
            .form-group.text-center
              label Desde
              input.form-control(type="text")
          .col-xs-4
            .form-group.text-center
              label Hasta
              input.form-control(type="text")

        .form-group.text-right
          button.btn.btn-default(type="submit") Guardar

